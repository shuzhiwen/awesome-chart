{
  "name": "awesome-chart",
  "version": "0.3.0",
  "description": "A lightweight 2d chart library",
  "typings": "dist/index.d.ts",
  "main": "dist/main.min.js",
  "license": "MIT",
  "files": [
    "dist",
    "!dist/*.html"
  ],
  "author": {
    "name": "shuzhiwen",
    "email": "yuwen4012@gmail.com",
    "url": "https://github.com/shuzhiwen"
  },
  "scripts": {
    "dev": "vite  --port 9527",
    "build": "yarn tsc2 && vite build",
    "bundle": "yarn webpack -c webpack.js && cp -r src/types dist/types",
    "package": "rm -rf dist && yarn tsc2 && yarn bundle && yarn clear",
    "clear": "find dist/*/* -name '*.js' | xargs rm -f && rm dist/index.js",
    "tsc2": "yarn tsc && rm tsconfig.tsbuildinfo",
    "docs": "sudo yarn typedoc src/index.ts",
    "push": "yarn test && git push origin",
    "test": "yarn jest"
  },
  "dependencies": {
    "animejs": "^3.2.1",
    "chroma-js": "^2.1.1",
    "d3": "^7.6.1",
    "lodash": "^4.17.21",
    "pixi.js": "^7.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/plugin-transform-modules-commonjs": "^7.18.6",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@types/animejs": "^3.1.4",
    "@types/chroma-js": "^2.1.3",
    "@types/d3": "^7.1.0",
    "@types/jest": "^27.4.1",
    "@types/lodash-es": "^4.17.6",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "@vitejs/plugin-react": "^1.0.7",
    "awesome-chart": "^0.2.0",
    "babel-loader": "^8.2.5",
    "eslint": ">=5.16.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.5.0",
    "jest": "^27.5.1",
    "jsdom": "^19.0.0",
    "monaco-editor": "^0.32.1",
    "path": "^0.12.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "5",
    "typedoc": "^0.23.21",
    "typescript": "^4.9.4",
    "vite": "^2.8.0",
    "vite-plugin-monaco-editor": "^1.0.10",
    "webpack": "^5.72.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.2"
  },
  "prettier": {
    "printWidth": 100,
    "trailingComma": "es5",
    "bracketSpacing": false,
    "jsxBracketSameLine": false,
    "singleQuote": true,
    "semi": false
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-typescript"
    ],
    "env": {
      "test": {
        "plugins": [
          "@babel/plugin-transform-modules-commonjs"
        ]
      }
    }
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "d3": "<rootDir>/node_modules/d3/dist/d3.min.js"
    }
  }
}
